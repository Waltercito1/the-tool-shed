<% @listings.each do |l| %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 bg-white shadow overflow-hidden sm:rounded-lg">
  <div class="px-4 py-5 sm:px-6">
    <h3 class="mt-6 text-2xl leading-6 font-medium text-gray-900">
      <%= l.title %> 
    </h3>
  </div>
  <div class="mb-8 pb-8 border-t border-gray-200">
    <dl>
      <div class="bg-gray-50 px-4 py-1 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-900">
          Tool Owner
        </dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
          <%= l.lender.full_name %>
        </dd>
      </div>
      <div class="bg-white px-4 py-1 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-900">
          Contact email:
        </dt>
        <dd class="mt-1 text-sm text-blue-700 sm:mt-0 sm:col-span-2">
          <%= l.lender.email %>
        </dd>
      </div>
      <div class="bg-gray-50 px-4 py-1 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-900">
          Tool pick up address (unless arrenged otherwise):
        </dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
          <%= l.lender.full_address %>
        </dd>
      </div>
      <div class="bg-white px-4 py-1 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-900">
          Reservation status:
        </dt>
        <dd class="mt-1 text-sm text-red-900 sm:mt-0 sm:col-span-2">
          <%= l.reservations.first.status %>
        </dd>
      </div>
      <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-900">
          Dates requested:
        </dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
          <p><%= l.reservations.first.check_in.strftime("%A, %B %e, %Y") %><strong> to </strong><%= l.reservations.first.check_out.strftime("%A, %B %e, %Y") %>. <strong>Duration:</strong> <%= l.reservations.first.duration %> day(s).</p>
        </dd>
      </div>
      <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-900">
          Cost per day
        </dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
         $<%= l.price %><p><strong> Total cost:</strong> $<%= l.reservations.first.total_price %></p>
        </dd><hr>
      </div>
      <div class="bg-white px-4 py-1 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-900">
          Tool Category:
        </dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
          <%= l.category %>
        </dd>
      </div>
      <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-900">
          Description:
        </dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
          <%= l.description %> 
        </dd>
      </div>
        <%= link_to "Delete Reservation", l.reservations.first, method: "delete", data: {confirm: "Are you sure???"}, class:"w-1/4 flex items-center justify-center rounded-md bg-red-300 border border-solid border-red-300"  %>
    </dl>
  </div>
</div>
<% end %>
