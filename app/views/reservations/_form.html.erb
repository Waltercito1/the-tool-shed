<div class="form-input">
    <%= f.label :pick_up_date %>
    <%= f.date_field :check_in %>
</div>
<div class="form-input">
    <%= f.label :return_date %>
    <%= f.date_field :check_out %>
</div>
<% if current_user.id == @reservation.listing.lender_id %>
    <div class="form-input">
        <%= f.label :status %>
        <%= f.select :status, options_for_select([ "pending", "approved"], selected: @reservation.status) %>
    </div>
<% end %>