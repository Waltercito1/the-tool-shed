<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 bg-white shadow overflow-hidden sm:rounded-lg">
    <%= form_with(url: listings_path, method: :get) do |f| %>

        <%= f.text_field :search, :class=>"m-6 focus:border-light-blue-500 focus:ring-1 focus:ring-light-blue-500 focus:outline-none w-6/12 text-sm text-black placeholder-gray-500 border border-gray-200 rounded-md py-2 pl-10", :type=>"text", :aria_label=>"Filter listings", :placeholder=>"Filter all listings" %>
        <%= f.submit "Search", :class=>" py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        <% end %>

    <%= display_list_conditionally(@listings) %>
</div>