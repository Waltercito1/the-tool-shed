<%= conditional_errors(@user) %>

<div class="new-form">
    <header>
        <h2>Edit Your Information</h2>
    </header>

    <div class="px-4 py-3 bg-gray-50 text-center sm:px-6">
        <%= form_with(model: @user) do |f| %>
        <%= render partial: "form", locals: {f: f} %>
        <button type="submit">
            <%= f.submit %>
            <% end %>
        </button>
    </div>
</div>

