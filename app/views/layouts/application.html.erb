<!DOCTYPE html>
<html>
  <head>
    <title>TheToolShed</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <ul class="nav-bar">
      <li class="nav-bar"> <%= link_to 'Home', root_path %> </li>
      <li class="nav-bar"> <%= link_to 'All Listings', listings_path %> </li>
      <li class="nav-bar"> <%= link_to 'Your Dashboard', current_user %> </li>
    <% if !logged_in? %>
      <li class="nav-bar-float-right"> <%= link_to 'Login', login_path %> </li>
      <li class="nav-bar-float-right"> <%= link_to 'Sign Up', new_user_path %> </li>
    <% else %>
      <li class="nav-bar-float-right"> <%= link_to "Logout", logout_path, method: "post" %> </li>
      <li class="nav-bar-float-right"> <%= link_to current_user.full_name%> </li>
    <% end %>
  </ul>

    <% flash.each do |type, msg| %>
      <div class="flash_errors">
        <%= msg %>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>
