<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="max-w-8xl w-full px-4 py-5 sm:px-6">
        <h3 class="mt-6 text-2xl leading-6 font-medium text-gray-900">
            We Appreciate Your Feedback
        </h3>
        <p>Please let us know about your experience using the:</p>
        <h2 class="font-medium text-blue-600"><%= @review.listing.title %></h2>
        <div class="new-form">
                <%= form_with(model: [@review.listing, @review]) do |f| %>
                
            <div class="form-input">
            <%= f.label :description, :class=>"block text-sm font-medium text-gray-700" %>
            <%= f.text_area :description, :class=>"mt-1 block w-full py-2 px-3 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border border-gray-300 rounded-md", :required=>true, :placeholder=>"Please add as much details about your experience as you'd like." %>
            </div>
            <div class="form-input">
            <%= f.label :rating, :class=>"block text-sm font-medium text-gray-700" %>
            <%= f.select :rating, options_for_select([ "5" , "4", "3", "2", "1"], selected: @review.rating), include_blank: "Select a rating", :required=>true %>
            </div>
            <div class="m-6 flex-auto flex space-x-3">
                <%= f.submit %>
            </div>
            <% end %>
        </div>
    </div>
</div>